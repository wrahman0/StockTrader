<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TableRow
        android:id="@+id/sellButtonTableRow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ImageButton
            android:contentDescription="@string/card_image_button_desc"
            android:id="@+id/stockSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_action_discard" />
    </TableRow>

    <TableRow
        android:id="@+id/stockBlock"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/stockNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="12"
                    android:paddingTop="3dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/details_important" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/stockQuantityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:textSize="@dimen/details_secondary_info" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/stockSymbolTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/details_secondary_info" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="@dimen/details_secondary_info" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/lastTradePriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/details_secondary_info" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="@dimen/details_secondary_info" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/changeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/details_secondary_info" />
            </TableRow>
        </LinearLayout>

        <TableRow
            android:id="@+id/gainLossImageTableRow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/gainLossImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/card_image_button_desc"
                android:src="@drawable/arrow_negative" />
        </TableRow>

        <TableRow
            android:id="@+id/gainLossNumberTableRow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/gainLossTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/details_important" />
        </TableRow>
    </TableRow>

</TableRow>